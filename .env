# =============================================================================
# RAG Incident System Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=INFO
APP_HOST=0.0.0.0
APP_PORT=8000

# -----------------------------------------------------------------------------
# Confluence Configuration
# -----------------------------------------------------------------------------
CONFLUENCE_URL=http://confluence-mock:8001
CONFLUENCE_USERNAME=admin
CONFLUENCE_API_TOKEN=your_confluence_token_here
CONFLUENCE_SPACE_KEYS=TECH,SUPPORT,OPS
CONFLUENCE_LABELS=incident,troubleshooting,knowledgebase

# -----------------------------------------------------------------------------
# SMTP Email Configuration
# -----------------------------------------------------------------------------
SMTP_HOST=0.0.0.0
SMTP_PORT=1025
SMTP_ALLOWED_SENDERS=xyz@test.com,admin@test.com,support@test.com

# -----------------------------------------------------------------------------
# ServiceNow Configuration
# -----------------------------------------------------------------------------
SERVICENOW_URL=http://servicenow-mock:8002
SERVICENOW_USERNAME=admin
SERVICENOW_PASSWORD=your_servicenow_password_here
SERVICENOW_API_VERSION=v1
SERVICENOW_ASSIGNMENT_GROUP=IT Support
SERVICENOW_CATEGORY=Incident
SERVICENOW_URGENCY=3
SERVICENOW_IMPACT=3

# -----------------------------------------------------------------------------
# LLM Configuration (Ollama)
# -----------------------------------------------------------------------------
LLM_PROVIDER=ollama
LLM_MODEL=llama3.2:3b
LLM_BASE_URL=http://ollama:11434
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=512
LLM_TOP_P=0.9
LLM_TIMEOUT=120

# -----------------------------------------------------------------------------
# Vector Database Configuration (ChromaDB)
# -----------------------------------------------------------------------------
VECTORDB_TYPE=chromadb
VECTORDB_PATH=/data/chromadb
VECTORDB_COLLECTION_NAME=confluence_docs
VECTORDB_PERSIST=true

# -----------------------------------------------------------------------------
# Embedding Configuration
# -----------------------------------------------------------------------------
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# -----------------------------------------------------------------------------
# RAG Configuration
# -----------------------------------------------------------------------------
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=200
RAG_TOP_K_RESULTS=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_CONTEXT_LENGTH=2000

# -----------------------------------------------------------------------------
# Retry & Resilience Configuration
# -----------------------------------------------------------------------------
RETRY_MAX_ATTEMPTS=3
RETRY_WAIT_EXPONENTIAL_MULTIPLIER=1
RETRY_WAIT_EXPONENTIAL_MAX=10

# -----------------------------------------------------------------------------
# Microsoft Teams Configuration
# -----------------------------------------------------------------------------
TEAMS_WEBHOOK_URL=https://your-webhook-url-here
TEAMS_ENABLED=true

# -----------------------------------------------------------------------------
# Mock Services Configuration (for testing)
# -----------------------------------------------------------------------------
USE_MOCK_SERVICES=true
MOCK_CONFLUENCE_PORT=8001
MOCK_SERVICENOW_PORT=8002
